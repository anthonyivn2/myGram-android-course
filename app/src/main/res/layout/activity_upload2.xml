<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="basics.mygram.UploadActivity">

    <ImageView
        android:id="@+id/imageView_Upload"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_uploadFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload from Gallery"
        android:layout_below="@+id/imageView_Upload"
        android:layout_centerHorizontal="true"
        android:onClick="buttonUploadFromGalleryClicked"/>

    <Button
        android:id="@+id/button_takeAPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_uploadFromGallery"
        android:layout_centerHorizontal="true"
        android:onClick="buttonCameraClicked"
        android:text="Take a photo"/>


    <Button
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_takeAPhoto"
        android:layout_centerHorizontal="true"
        android:onClick="uploadImage"
        android:text="UPLOAD PHOTO"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_upload"
        android:ems="10"
        android:inputType="text"
        android:text="Caption"      />


</RelativeLayout>
